package com.flightBooking.services;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.flightBooking.model.FlightDetails;
import com.flightBooking.repository.FlightBookingRepository;

@Service
public class FlightDetailsServiceImplementation implements FlightDetailsServices {

	
	@Autowired 
	private FlightBookingRepository flightRepository;

	@Override
	public FlightDetails create(FlightDetails flightDetails) {
		// TODO Auto-generated method stub
		return flightRepository.insert(flightDetails);
	}

	@Override
	public Optional<FlightDetails> getFlight(FlightDetails flightId) {
		// TODO Auto-generated method stub
		return flightRepository.findById(flightId);
		
	}
	
	
}
