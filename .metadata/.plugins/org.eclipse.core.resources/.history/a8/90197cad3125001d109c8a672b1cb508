package com.flightBooking.repository;

import java.util.Optional;

import org.springframework.data.mongodb.repository.MongoRepository;
import org.springframework.stereotype.Repository;

import com.flightBooking.model.FlightDetails;

@Repository
public interface FlightBookingRepository extends MongoRepository<FlightDetails, Long>{

	Optional<FlightDetails> findById(long flightId);

}
